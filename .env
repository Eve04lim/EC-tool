# .env ファイル設定例
# 実際の使用時にはこのファイルをコピーして .env とし、適切な値に変更してください

# データベース設定
# DB_TYPE: sqlite または postgresql
DB_TYPE=sqlite
DB_NAME=ec_tracker.db
# PostgreSQLを使用する場合は以下も設定
# DB_USER=postgres
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432

# ロギング設定
LOG_LEVEL=INFO
LOG_FILE=ec_tracker.log

# 通知設定
# メールでの通知
ENABLE_EMAIL=False
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_TO=recipient1@example.com,recipient2@example.com

# Slackでの通知
ENABLE_SLACK=False
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXXXXXX/YYYYYYYYY/ZZZZZZZZZZZZZZZZZZZZZZZZ

# Google Sheets 連携設定
ENABLE_GSHEETS=True
GSHEETS_CREDENTIALS_FILE=credentials.json
GSHEETS_SPREADSHEET_ID=1mbG5t2XwCF9hlo8aqmrSIyQcj66ffnmK0VUNujOjIOA
GSHEETS_TOKEN_FILE=token.json

# プロキシ設定
ENABLE_PROXY=False
# カンマ区切りでプロキシリストを指定
PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080